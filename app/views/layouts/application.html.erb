<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "ConcertApp Purchase management" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Concert Management Application" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div id="container">
      <%= render 'layouts/navigation' %>

      <div id="main" role="main">
        <div class="container">
          <div class="row">

            <%= render 'layouts/messages' %>
            <div class="col-md-12">
              <%= yield %>
            </div>
          </div>
        </div> <!--! end of .container -->
      </div> <!--! end of #main -->

      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>